# Environment variables for Lambda deployment
# Copy this file to .env.lambda and fill in your actual values

# Environment
NODE_ENV=production

# Database - Update with your production PostgreSQL URL
# For Lambda, consider using connection pooling with PgBouncer or AWS RDS Proxy
DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/database_name

# JWT Security
JWT_SECRET=your-super-secure-jwt-secret-here
JWT_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# S3 Configuration
S3_BUCKET_NAME=your-s3-bucket-name

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Redis (Optional - for caching and rate limiting)
# You can use AWS ElastiCache or remove this for Lambda
REDIS_URL=

# Security
ENCRYPTION_KEY=your-encryption-key-here
HASH_SALT=your-hash-salt-here

# Performance Monitoring (Optional)
ENABLE_QUERY_MONITORING=true

# Custom Domain (if using serverless-domain-manager)
CUSTOM_DOMAIN=api.sigepbounce.com